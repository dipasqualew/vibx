{
  "name": "vibx",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '@vibx/server' dev & bun run --filter '@vibx/client' dev & wait",
    "test": "bun run --filter '*' test",
    "test:repeat": "for i in $(seq 1 ${REPEAT:-5}); do bun run --filter '*' test & done; wait",
    "test:e2e": "playwright test",
    "test:e2e:repeat": "playwright test --repeat-each ${REPEAT:-5}",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "bun run --filter '*' build"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
